body 
    margin: 0px


.Menu_container
    display: flex
    flex-direction: column
    margin: 0px
    align-items: center
    background-color: #813F71
    height: fit-content
    padding: 5px
    width: 100%
    justify-content: center


.Menu
    display: flex
    flex-direction: row
    height: fit-content


.Menu_headline
    display: flex
    flex-direction: row
    width: fit-content
    justify-content: center
    align-items: center



.Menu_theme
    display: flex
    background-color: black
    color: white
    border-style: none
    margin: 10px

.Menu_options-container
    display: flex
    flex-direction: row
    align-items: center

.Menu_signout-button
    display: flex
    margin: 10px

.Menu_kate_style
    display: flex
    background-color: #FFCFF3;
    width: 100px
    height: 40px
    font-family: Arial, sans-serif;
    justify-content: center
    align-items: center
    text-decoration: none
    font-weight: bolder
    border-top-left-radius: 15px
    border-bottom-left-radius: 15px
    z-index: 1


.Menu_searchbar
    display: flex
    flex-direction: row
    height: 50px
    width: 400px
    background-color: #FFCFF3;
    border: 2px purple
    box-shadow: rgba(0, 0, 0, 0.25) 0px 4px 55px, rgba(0, 0, 0, 0.12) 0px -12px 30px, rgba(0, 0, 0, 0.12) 0px 4px 6px, rgba(0, 0, 0, 0.17) 0px 12px 13px, rgba(0, 0, 0, 0.09) 0px -3px 5px;
    z-index: 3
    padding-left: 10px
    padding-right: 10px
    font-size: 20px 

.Menu_search-button
    display: flex
    background-color: #FFCFF3;
    width: 50px
    height: 40px
    font-family: Arial, sans-serif;
    justify-content: center
    align-items: center
    text-decoration: none
    font-weight: bolder
    border-top-right-radius: 15px
    border-bottom-right-radius: 15px
    z-index: 1


.Menu_cart
    display: flex
    background-color: #FFCFF3;
    margin: 20px
    width: 100px
    height: 40px
    font-family: Arial, sans-serif;
    justify-content: center
    align-items: center
    text-decoration: none
    font-weight: bolder

.Menu_signup-link
    display :flex
    margin: 10px

.Menu_login-link
    display :flex
    margin: 10px

.Menu_cart
    display: flex
    flex-direction: row