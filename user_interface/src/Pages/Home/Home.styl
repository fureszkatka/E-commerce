.Home_container
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    margin: 0px
    background-color: #FFCFF3;

.Home_items
    display: flex
    flex-flow: row wrap
    margin: 10px
    justify-content: center
    width: 1500px
    padding: 20px
    background-color: white
    border-radius: 15px

.Home_item
    display: flex
    flex-direction: column
    margin: 30px
    height: 300px
    width: 250px
    background-color: rgb(124, 13, 96)
    align-items: flex-start
    padding: 10px
    border-radius: 15px
    color: white


.Home_item-info
    display: flex
    flex-direction: column


.Home_image
    display: flex 
    width: 250px
    height: 200px
    border-radius: 15px

.Home_name
    display: flex
    font-weight: bolder
    font-size: 25px
    color: white
    
.Home_price
    display: flex
    font-size: 30px

.Home_quantity-container
    display: flex
    flex-direction: row
    justify-content: flex-end
    width: 250px