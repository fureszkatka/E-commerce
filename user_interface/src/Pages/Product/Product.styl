.Product_container
    display: flex
    flex-direction: row
    justify-content: center
    height: fit-content
    padding: 20px
    background-color: #FFCFF3;


.Product_rightside
    display: flex
    flex-direction: column
    height: font inherit
    margin: 20px
    font-size: 25px
    font-family: 'Lobster', cursive;


.Product_item
    display: flex
    width: 50%
    height: fit-content
    flex-direction: column
    background-color: rgb(124, 13, 96)
    border-radius: 15px
    padding: 20px
    box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 70px 4px;

.Product_background
    display: flex
    background-color: white
    border-radius: 15px
    margin: 30px
    padding: 20px


.Product_name-image
    display: flex
    flex-direction: column



.Product_image
    display: flex
    border-radius: 15px



.Product_name
    display: flex
    font-size: 40px
    font-family: 'Kablammo', cursive;


.Product_price-quan
    display: flex
    flex-direction: row
    font-family: 'Kablammo', cursive;
    font-size: 40px
    justify-content: center
    color: white
    text-shadow: 2px 2px 10px #000000;


.Product_buttons
    display: flex
    flex-direction: row
    justify-content: space-around
    align-items: center



.Product_minus
    display: flex
    margin: 10px
    width: 50px
    height: 50px
    border-radius: 15px
    border-style: none
    align-items: center
    justify-content: center
    box-shadow: rgba(0, 0, 0, 0.56) 0px 10px 20px 4px;
    font-size: 40px
    cursor: pointer
    


.Product_quantity
    display: flex
    margin: 5px
    text-shadow: 2px 2px 10px #000000;
    color: white
    font-family: 'Kablammo', cursive;
    font-size: 45px
    width: 50px
    height: fit-content
    justify-content: center


.Product_plus
    display: flex
    margin: 10px
    width: 20px
    width: 50px
    height: 50px
    border-radius: 15px
    border-style: none
    align-items: center
    justify-content: center
    box-shadow: rgba(0, 0, 0, 0.56) 0px 10px 20px 4px;
    font-size: 40px
    cursor: pointer



.Product_add
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    height: 60px
    width: 100px
    font-family: 'Kablammo', cursive;
    font-size: 20px
    border-radius: 15px
    background-color: rgb(43, 235, 43)
    text-shadow: 2px 2px 10px #000000;
    box-shadow: rgba(27, 172, 116, 0.56) 0px 10px 20px 4px;


