@import url('https://fonts.googleapis.com/css2?family=Kablammo&display=swap');

.PopupLogin_container
    display: flex 
    flex-direction: column
    background-color: #c67070
    width: fit-content
    height: 600px
    position: absolute
    top: 20%
    left: 600px
    box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 70px 4px;

.PopupLogin_inputs-container
    display: flex
    flex-direction: column
    width: fit-content
    margin: 10px
    
.PopupLogin_email
    display: flex
    border-style: none
    width: 500px
    height: 60px
    margin: 10px

.PopupLogin_password
    display: flex
    border-style: none
    width: 500px
    height: 60px
    margin: 10px


.PopupLogin_button-container 
    display: flex
    flex-direction: row
    justify-content: center
    margin: 10px

.PopupLogin_button
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    margin: 10px
    background: linear-gradient(110deg, #CA115E 60%, #FC115F 60%);
    width: 200px
    height: 50px
    font-family: 'Kablammo', cursive;
    font-size: 25px
    border-style: none
    position: relative
    cursor: pointer

.PopupLogin_close
    display: flex
    flex-direction: row
    justify-content:  flex-end
    margin: 10px


.PopupLogin_close-button
    display: flex
    margin: 10px
    background-color: red
    padding: 5px
    border-radius: 15px
    width: 20px
    height: 20px
    justify-content: center
    color: rgb(8, 8, 8)
    font-weight: bolder
    font-family: 'Kablammo', cursive;
    cursor: pointer

