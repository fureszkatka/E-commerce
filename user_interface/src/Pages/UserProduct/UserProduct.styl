.UserProduct_container
    display: flex
    margin: 30px
    flex-direction: row
    justify-content: flex-start
    width: 80%
    height: fit-content
    padding: 20px
    background-color: rgb(190, 109, 109)
    border-radius: 15px


.UserProduct_rightside
    display: flex
    flex-direction: column
    height: font inherit
    margin: 20px
    font-size: 25px
    font-family: 'Lobster', cursive;


.UserProduct_background
    display: flex
    width: 50%
    height: fit-content
    flex-direction: column
    background-color: rgb(124, 13, 96)
    border-radius: 15px
    padding: 20px
    box-shadow: rgba(0, 0, 0, 0.56) 0px 22px 70px 4px;



.UserProduct_name-image
    display: flex
    flex-direction: column



.UserProduct_image
    display: flex
    border-radius: 15px



.UserProduct_name
    display: flex
    font-size: 40px
    font-family: 'Kablammo', cursive;


.UserProduct_price-quan
    display: flex
    flex-direction: row
    font-family: 'Kablammo', cursive;
    font-size: 40px
    justify-content: center
    color: white
    text-shadow: 2px 2px 10px #000000;


.UserProduct_buttons
    display: flex
    flex-direction: row
    justify-content: space-around
    align-items: center



.UserProduct_minus
    display: flex
    margin: 10px
    width: 50px
    height: 50px
    border-radius: 15px
    border-style: none
    align-items: center
    justify-content: center
    box-shadow: rgba(0, 0, 0, 0.56) 0px 10px 20px 4px;
    font-size: 40px
    


.UserProduct_quantity
    display: flex
    margin: 5px
    text-shadow: 2px 2px 10px #000000;
    color: white
    font-family: 'Kablammo', cursive;
    font-size: 45px
    width: 50px
    height: fit-content
    justify-content: center


.UserProduct_plus
    display: flex
    margin: 10px
    width: 20px
    width: 50px
    height: 50px
    border-radius: 15px
    border-style: none
    align-items: center
    justify-content: center
    box-shadow: rgba(0, 0, 0, 0.56) 0px 10px 20px 4px;
    font-size: 40px




.UserProduct_add
    display: flex
    flex-direction: row
    align-items: center
    justify-content: center
    height: 60px
    width: 100px
    font-family: 'Kablammo', cursive;
    font-size: 20px
    border-radius: 15px
    background-color: rgb(43, 235, 43)
    text-shadow: 2px 2px 10px #000000;
    box-shadow: rgba(27, 172, 116, 0.56) 0px 10px 20px 4px;


