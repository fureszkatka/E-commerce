.Cart_content
    display: flex
    flex-direction: column
    align-items: center
    background-color: #FFCFF3;
    padding: 20px
    justify-content: center



.Cart_background
    display: flex
    flex-direction: column
    background-color: white
    width: 100%
    border-radius: 15px
    align-items: center

.Cart_container
    display: flex
    flex-direction: row
    width: 90%
    height: 50px
    justify-content: center
    margin: 20px
    background-color: #8a0168
    color: white
    font-size: 25px
    padding: 10px
    border-radius: 15px
    align-items: center
    

.Cart_desc
    display: flex
    flex-direction: row
    justify-content: flex-start
    width: 70%
    

.Cart_name
    display: flex

.Cart_quantity
    display: flex
    width: fit-content
    flex-flow: nowrap


.material-symbols-outlined 
  font-variation-settings:
  'FILL' 0,
  'wght' 400,
  'GRAD' 0,
  'opsz' 48
  color: red

.Cart_checkbox
    display: flex
    color: white