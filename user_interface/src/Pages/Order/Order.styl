.Order_container
    display: flex
    flex-direction: column
    align-items: center

.Order_map
    display: flex
    flex-direction: row
    justify-content: space-evenly
    background-color: #8a0168 
    width: 80%
    height: 50px
    border-radius: 15px
    margin: 10px
    font-weight: bolder
    font-family: Arial, sans-serif;
    align-items: center
    font-size: 20px
    color: white


.Order_quantity
    display: flex
    margin: 10px

.Order_name
    display: flex
    margin: 10px

.Order_noItem
    display: flex
    color: grey
    width: fit-content

.Order_Pay-button
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    color: white
    border: none
    height: 40px
    width: 100px
    background-color: green
    font-family: Arial, sans-serif;
    font-weight: bolder
    font-size: 20px